<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.android.ashish.release.myOCR.MainActivity">
    <TextView
        android:id="@+id/temp_read_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/startOcr"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Start OCR"
        android:layout_centerHorizontal="true"
        android:onClick="startOcr_click"
        android:layout_centerVertical="true"/>
    <Button
        android:id="@+id/pickImg"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Read from image"
        android:layout_centerHorizontal="true"
        android:onClick="pick_image"
        android:layout_below="@id/startOcr"/>
    <TextView
        android:id="@+id/by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pickImg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="by Ashish Ranjan"/>
    <TextView
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/by"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="*This app is powered using tesseract engine and works best if your device has a good,working camera."/>
</RelativeLayout>
